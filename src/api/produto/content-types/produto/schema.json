{
  "kind": "collectionType",
  "collectionName": "produtos",
  "info": {
    "singularName": "produto",
    "pluralName": "produtos",
    "displayName": "produto"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "nome": {
      "type": "string",
      "required": true
    },
    "preco": {
      "type": "decimal",
      "required": true
    },
    "descricao": {
      "type": "richtext"
    },
    "imagem": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "nome",
      "required": true
    }
  }
}
